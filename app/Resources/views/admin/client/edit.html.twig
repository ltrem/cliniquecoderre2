{% extends 'admin/base.html.twig' %}

{% block body %}

    {{ form_start(form, {'method': 'post', 'action': path('admin_client_edit', { 'id': client.id }), 'attr': {'class': 'fos_user_registration_register'}}) }}

        <div class="row">
            <div class="col-sm-12">

                <div class="row">
                    <div class="page-header">
                        <h2>
                            {{ form.vars.value.firstname }} {{ form.vars.value.lastname }}
                            <small>{{ form.vars.value.user.username }}</small>
                            <!-- Profile picture -->
                            {% if client.picture|length %}
                                <div class="pull-right">
                                    <img height="50" src="{{ vich_uploader_asset(client.picture, 'imageFile') }}" alt="Photo du client" />
                                </div>
                            {% endif %}
                        </h2>
                        <label class="label label-default">
                            {% if is_granted('ROLE_CLIENT') %}
                                Client
                            {% endif %}
                        </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <!-- Nav tabs -->
                        <ul class="nav nav-pills pull-left" role="tablist" style="margin-bottom: 15px;">
                            <li role="presentation" class="active"><a href="#info" aria-controls="client" role="tab" data-toggle="tab">Informations générales</a></li>
                            <li role="presentation"><a href="#events" aria-controls="events" role="tab" data-toggle="tab">Rendez-vous <span class="badge">{{ client.events|length }}</span></a></li>
                            <li role="presentation"><a href="#communications" aria-controls="communcations" role="tab" data-toggle="tab">Communications <span class="badge">{{ client.communications|length }}</span></a></li>
                        </ul>
                    </div>
                </div>

                <!-- Tab panes -->
                <div class="tab-content">

                    <div role="tabpanel" class="tab-pane active" id="info">

                        <div class="col-xs-12">

                            <div class="page-header">
                                <h3>{{ 'admin.client.edit.title'|trans({}, 'messages') }}</h3>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.firstname, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.firstname) }}
                                    {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.lastname, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.lastname) }}
                                    {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_row(form.birthdate) }}
                                    {{ form_errors(form.birthdate) }}
                                    {{ form_widget(form.birthdate, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.gender, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.gender) }}
                                    {{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.coordinates[0].address, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.coordinates[0].address) }}
                                    {{ form_widget(form.coordinates[0].address, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.coordinates[0].city, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.coordinates[0].city) }}
                                    {{ form_widget(form.coordinates[0].city, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.coordinates[0].province, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.coordinates[0].province) }}
                                    {{ form_widget(form.coordinates[0].province, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.coordinates[0].country, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.coordinates[0].country) }}
                                    {{ form_widget(form.coordinates[0].country, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.contacts[0].phoneCell, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.contacts[0].phoneCell) }}
                                    {{ form_widget(form.contacts[0].phoneCell, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.contacts[0].phoneCellCarrier, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.contacts[0].phoneCellCarrier) }}
                                    {{ form_widget(form.contacts[0].phoneCellCarrier, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.contacts[0].phoneHome, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.contacts[0].phoneHome) }}
                                    {{ form_widget(form.contacts[0].phoneHome, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form_label(form.contacts[0].phoneWork, null, { 'label_attr': {'class': 'control-label'}}) }}
                                    {{ form_errors(form.contacts[0].phoneWork) }}
                                    {{ form_widget(form.contacts[0].phoneWork, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>

                            <div class="col-sm-12" id="client_coordinates">
                                {{ form_rest(form) }}
                            </div>

                            <div class="row" style="margin-top:20px;">
                                <div class="col-xs-4">
                                    <a class="btn btn-default btn-md" href="{{ path('admin_client') }}">
                                        <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
                                        Annuler et rien modifier.
                                    </a>
                                </div>
                                <div class="col-xs-8">
                                    <input class="btn btn-lg btn-success pull-right" type="submit" id="_submit" name="_submit" value="{{ 'registration.edit.submit_and_appointment'|trans }}" />
                                </div>
                            </div>
                        </div>

                    </div>

                    <div role="tabpanel" class="tab-pane" id="events">
                        <div class="col-xs-12">
                            <div class="page-header">
                                <h3>
                                    Rendez-vous à venir
                                    <a data-toggle="modal" href="{{ path('admin_event_new', { 'client': client.id }) }}" data-target="#myModal" class="btn btn-xs btn-success">Créer un rendez-vous</a>
                                </h3>
                            </div>

                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date et heure du rendez-vous</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% if eventOffered|length %}
                                    <tr>
                                        <td>{{ eventOffered.name }}</td>
                                        <td>{{ eventOffered.startTime|date('Y-m-d H:i:s') }}</td>
                                        <td>
                                            <a data-toggle="modal" href="{{ path('appointment_notification_answer', { 'token': notifToken, 'answer': 1 }) }}" data-target="#myModal" class="btn btn-xs btn-success">Accepter ce rendez-vous!</a>
                                        </td>
                                        <td></td>
                                    </tr>
                                {% endif %}

                                {% if upcomingEvents|length %}
                                    {% for event in upcomingEvents %}

                                        {% if event.cancellation|length %}
                                            <tr class="cancelled danger hide">
                                        {% else %}
                                            <tr>
                                        {% endif %}
                                        {# <th scope="row"><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td> #}
                                        <td>{{ event.name }}</td>
                                        <td>{{ event.startTime|date('Y-m-d H:i:s') }}</td>
                                        <td>
                                            {% if event.cancellation|length  %}
                                                <a data-toggle="modal" class="btn btn-xs btn-info">Rendez-vous annuler</a>
                                            {% else %}
                                                <a data-toggle="modal" href="{{ path('event_cancel', { 'id': event.id }) }}" data-target="#myModal" class="btn btn-xs btn-danger">Annuler mon rendez-vous</a>
                                            {% endif %}
                                        </td>
                                        </tr>
                                        {% if event.cancellation|length  %}
                                            <tr class="danger cancelled hide">
                                                <td style="padding-left: 15px; font-size: 10px;" colspan="3">
                                                    Annulé: J'avais mal au ventre
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3">
                                            Aucun rendez-vous à venir
                                        </td>
                                    </tr>
                                {% endif %}

                                </tbody>
                            </table>
                        </div>

                        <div class="col-xs-12">
                            <div class="page-header">
                                <h3>Rendez-vous passés</h3>
                            </div>
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date et heure du rendez-vous</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if pastEvents|length %}
                                    {% for event in pastEvents %}
                                        <tr>
                                            {# <th scope="row"><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td> #}
                                            <td>{{ event.name }}</td>
                                            <td>{{ event.startTime|date('Y-m-d H:i:s') }}</td>
                                            <td>
                                                <a href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-xs btn-info">Note sur le rendez-vous</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3">
                                            Vous n'avez jamais eu de rendez-vous.
                                        </td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>

                        <div class="col-xs-12">
                            <div class="page-header">
                                <h3>Rendez-vous annulé</h3>
                            </div>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Date et heure du rendez-vous</th>
                                        <th>Raison</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% if cancelledUpcomingEvents|length %}
                                    {% for event in cancelledUpcomingEvents %}
                                        <tr class="danger">
                                            {# <th scope="row"><a href="{{ path('event_show', { 'id': event.id }) }}">{{ event.id }}</a></td> #}
                                            <td>{{ event.name }}</td>
                                            <td>{{ event.startTime|date('Y-m-d H:i:s') }}</td>
                                            <td>
                                                {{ event.cancellation.reason }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="3">
                                            Vous n'avez jamais cancellé de rendez-vous!
                                        </td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                    {# Communications #}
                    <div role="tabpanel" class="tab-pane" id="communications">

                        <div class="page-header">
                            <h3>
                                {{ 'admin.client.communications.title'|trans }}
                                <a data-toggle="modal" href="{{ path('communication_new', { 'client': client.id }) }}" data-target="#myModal" class="btn btn-xs btn-success">Envoyer une communication</a>
                            </h3>
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date d'envoi</th>
                                    <th>Envoyé à</th>
                                    <th>Titre</th>
                                    <th>Contenu de la communication</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if client.communications|length %}
                                {% for communication in client.communications %}
                                    <tr>
                                        <td>{{ communication.dateSent|date('Y-m-d H:i:s') }}</td>
                                        <td>{{ communication.email }}</td>
                                        <td>{{ communication.title }}</td>
                                        <td>{{ communication.content }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4">
                                        Aucune communication
                                    </td>
                                </tr>
                            {% endif %}
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>

    {{ form_end(form) }}

{% endblock %}

