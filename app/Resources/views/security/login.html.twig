{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="page-header">
        <h1>Connexion / Créer un compte</h1>
    </div>

    <div class="row">
        <div class="col-sm-6 col-xs-12">
            {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success">{{ 'login.button'|trans }} <span class="fa fa-lock"></span></button>
                <a href="{{ path('user_request_password') }}">{{ 'login.forgot'|trans }}</a>
                <br /><br />
                <a href="{{ path("user_register") }}" class="btn btn-info">Créer un compte!</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}