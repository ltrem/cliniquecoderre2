{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form, {'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="row">
            <div class="col-sm-12">

                <div class="page-header">
                    <h3>{{ 'resetting.request.title'|trans({}, 'messages') }}</h3>
                </div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                {{ form_label(form.email, 'registration.email.first', { 'label_attr': {'class': 'control-label'}}) }}
                                {{ form_errors(form.email) }}
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <div class="row" style="margin-top: 25px">
            <div class="col-xs-4">
                <a class="btn btn-default btn-md" href="{{ path('user_profile') }}">
                    <span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span>
                    Annuler et rien modifier.
                </a>
            </div>
            <div class="col-xs-8">
                <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.send'|trans }}" />
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}
